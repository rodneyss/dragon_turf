- if @user.errors.any?
  %ol#errorNess
    - @user.errors.full_messages.each do |msg|
      %li= msg



= form_for @user do |f|
  %p
    = f.label :name
    = f.text_field :name, :autofocus => true
  %p
    = f.label :password
    = f.password_field :password

  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  %p
    = f.label :image
    = f.text_field :image
  %p
    = f.label :submit
    = f.submit
